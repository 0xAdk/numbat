{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Insect",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#dimension"
        },
        {
            "include": "#identifier"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.insect",
                    "match": "\\b(dimension|unit|let|fn)\\b"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric",
                    "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.number-sign",
                    "match": "#.*$"
                }
            ]
        },
        "dimension": {
            "patterns": [
                {
                    "name": "entity.name.type",
                    "match": "\\b[A-Z][A-Za-z]+\\b"
                }
            ]
        },
        "identifier": {
            "patterns": [
                {
                    "name": "variable.name",
                    "match": "\\b\\p{Ll}\\w+\\b"
                }
            ]
        }
    },
    "scopeName": "source.insect"
}
